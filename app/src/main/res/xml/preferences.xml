<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/synchronization"
        >
        <ListPreference
            android:key="pref_taskwarrior_sync_state"
            android:title="@string/status"
            android:entries="@array/taskwarrior_sync_states"
            android:entryValues="@array/taskwarrior_sync_states"
            android:defaultValue="Off"
            android:enabled="false"
            />
        <EditTextPreference
            android:key="pref_taskwarrior_host"
            android:title="@string/host_address"
            android:summary="@string/host_address_summary"
            android:hint="@string/addr_port"
            android:defaultValue=""
            />
        <EditTextPreference
            android:key="pref_taskwarrior_credentials"
            android:title="@string/credentials"
            android:summary="@string/credentials_summary"
            android:defaultValue=""
            />
        <pl.rbolanowski.tw4a.preference.ContentPreference
            android:key="pref_taskwarrior_private_key"
            android:title="@string/private_key"
            android:summary="@string/none"
            />
        <pl.rbolanowski.tw4a.preference.ContentPreference
            android:key="pref_taskwarrior_ca"
            android:title="@string/certificate_request"
            android:summary="@string/none"
            />
        <pl.rbolanowski.tw4a.preference.ContentPreference
            android:key="pref_taskwarrior_cert"
            android:title="@string/certificate"
            android:summary="@string/none"
            />
    </PreferenceCategory>
</PreferenceScreen>

